{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "semi": "warn"
    },
    "ignorePatterns": [
        "node_modules/",
        "lib/"
    ],
    "overrides": [
        {
            "files": [
                "chrome/sw/*.js"
            ],
            "parserOptions": {
                "sourceType": "module"
            }
        }
    ]
}
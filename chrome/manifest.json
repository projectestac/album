    "activeTab",
    "tabs",
    "notifications",
    "storage",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "38": "icons/icon38.png",
